#include<iostream>
using namespace std;

inline int max(int a,int b,int c)
{
return (a>b) ? ((a>c)? a:c) : ((b>c) ? b:c);
}

int main()
{
int largest;
int num1,num2,num3;
cout<<"Enter 3 number::";
cin>>num1>>num2>>num3;
largest=max(num1,num2,num3);
cout<<"the largest number is::"<<largest;

return 0;
}
